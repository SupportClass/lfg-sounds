{
	"root": true,
	"extends": "xo/esnext",
	"globals": {
		"nodecg": true,
		"NodeCG": true,
		"Polymer": true
	},
	"rules": {
		"new-cap": [0],
		"babel/new-cap": [
			2,
			{
				"capIsNewExceptions": [
					"Polymer",
					"nodecg.Replicant",
					"NodeCG.Replicant"
				]
			}
		]
	},
	"plugins": [
		"html"
	]
}
